{
  "expo": {
    "name": "Armora Security Transport",
    "slug": "armora-security-transport", 
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "platforms": [
      "ios",
      "android", 
      "web"
    ],
    "scheme": "armora",
    "splash": {
      "backgroundColor": "#0A1F3D",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.armora.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A1F3D"
      },
      "package": "com.armora.app"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT_UP"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a8bc4dc8-114c-43c1-94d7-960337630745"
      }
    }
  }
}
